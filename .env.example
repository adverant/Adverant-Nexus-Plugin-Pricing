# NexusPricing Configuration

# Required
NEXUS_API_URL=https://api.adverant.ai
PORT=9030
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nexus_pricing

# Redis Cache
REDIS_URL=redis://localhost:6379

# ML Service
ML_SERVICE_URL=http://nexus-pricing-ml:8000
ML_SERVICE_TIMEOUT=30000

# Authentication
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Nexus Core Services
GRAPHRAG_URL=http://nexus-graphrag:9090
MAGEAGENT_URL=http://nexus-mageagent:9080

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# Pricing Configuration
DEFAULT_CURRENCY=USD
MIN_PRICE_FACTOR=0.5
MAX_PRICE_FACTOR=3.0
DEFAULT_PRICING_HORIZON_DAYS=365

# Market Analysis
ENABLE_COMPETITOR_TRACKING=true
ENABLE_EVENT_DETECTION=true

# ML Configuration
ML_FORECAST_DAYS=90
ML_TRAINING_SCHEDULE=0 2 * * *
ML_MIN_TRAINING_DATA_POINTS=90

# Feature Flags
ENABLE_AB_TESTING=true
ENABLE_PRICE_NOTIFICATIONS=true
ENABLE_AUTO_PRICING=false

# Logging
LOG_LEVEL=info
